<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    android:background="@color/background_light">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardImage"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginTop="64dp"
        app:cardBackgroundColor="#F0F4F8"
        app:cardCornerRadius="120dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="0dp">

        <ImageView
            android:id="@+id/ivIntroImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher"
            android:alpha="0.8" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvIntroTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:text="Step Title"
        android:textColor="@color/text_main"
        android:textSize="28sp"
        android:textStyle="bold"
        android:letterSpacing="-0.02"
        app:layout_constraintTop_toBottomOf="@+id/cardImage" />

    <TextView
        android:id="@+id/tvIntroDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:text="소셜미디어블로커는 여러분의 더 나은 삶을 위한 집중의 미학을 설계합니다."
        android:textColor="@color/text_sub"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tvIntroTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>
